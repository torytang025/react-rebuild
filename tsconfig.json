{
	"compilerOptions": {
		"composite": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noEmit": true,

		"module": "ESNext",
		"target": "ES6",
		"moduleResolution": "Bundler",

		/* Linting */
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": false,

		"types": ["vite/client"]
	},
	"include": ["packages/**/*"],
	"references": [
		{
			"path": "./packages/shared"
		},
		{
			"path": "./packages/react"
		},
		{
			"path": "./packages/react-reconciler"
		}
	]
}
